{
    "packages": {
        "type": "array",
        "items": {
          "type": "string",
          "uniqueItems": true
        },
        "description": "An array of globs where packages can be located.",
        "default":[
            "auction",
            "custom-matchers",
            "deploy",
            "exchange-v2",
            "gas-usage-tests",
            "interfaces",
            "meta-tx",
            "lazy-mint",
            "lib-asset",
            "lib-bp",
            "lib-part",
            "lib-signature",
            "role-operator",
            "royalties",
            "royalties-registry",
            "royalties-upgradeable",
            "tokens",
            "tokens-minimal",
            "tokens-test",
            "transfer-manager",
            "transfer-proxy"
        ]
      },
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "0.8.0",
    "publishConfig": {
        "access": "public"
    },
    "command": {
        "version": {
            "allowBranch": [
                "master",
                "develop",
                "feature/*"
            ]
        },
        "publish": {
            "allowBranch": [
                "master",
                "develop",
                "feature/*"
            ],
            "conventionalCommits": true,
            "message": "chore(release): bump versions after release",
            "yes": true
        }
    }
}
